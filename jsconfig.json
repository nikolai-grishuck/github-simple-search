{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/components": [
        "src/components/*"
      ],
      "@/utils": [
        "src/utils/*"
      ],
      "@/view": [
        "src/view/*"
      ],
      "@/assets": [
        "src/assets/*"
      ],
      "@/plugin": [
        "src/plugin/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  }
}
